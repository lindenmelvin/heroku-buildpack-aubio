#!/usr/bin/env bash
echo "-----> Installing Aubio 0.4.7"

BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="https://github.com/lindenmelvin/heroku-buildpack-aubio/raw/main/aubio.tar.gz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar x
cd aubio

make
